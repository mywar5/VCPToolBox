{
    "name": "RAGDiaryPlugin",
    "displayName": "RAG日记本检索器",
    "version": "1.0.0",
    "description": "通过向量检索动态地将日记内容注入到系统提示词中，以实现高效、低消耗的长期记忆。",
    "author": "Ryan & Gemini",
    "pluginType": "hybridservice",
    "entryPoint": {
        "script": "RAGDiaryPlugin.js"
    },
    "communication": {
        "protocol": "direct"
    },
    "webSocketPush": {
        "enabled": false
    },
    "configSchema": {
        "RerankUrl": {
            "type": "string",
            "description": "Rerank服务的URL",
            "default": ""
        },
        "RerankApi": {
            "type": "string",
            "description": "Rerank服务的API密钥",
            "default": ""
        },
        "RerankModel": {
            "type": "string",
            "description": "Rerank使用的模型",
            "default": ""
        },
        "RerankMultiplier": {
            "type": "number",
            "description": "Rerank前K值的放大倍率",
            "default": 2.0
        },
        "RerankMaxTokensPerBatch": {
            "type": "number",
            "description": "单次Rerank请求的最大Token数",
            "default": 30000
        }
    }
}